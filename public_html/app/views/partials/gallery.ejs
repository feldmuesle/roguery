<!-- This file contains the characters gallery -->
<div id="gallery" class="row">
        <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-lg-6 col-lg-offset-3">
            <div id="heading" class="row">
                <div class="col-sm-7">
                    <h2><span class="fa fa-sign-in"></span> choose a character</h2>
                </div>
                <div class="col-sm-5"> or
                    <button id="pickRand" type="button" class="btn btn-default btn-sm">Pick random</button>
                    <% if (games.length > 0){%>
                        <button id="viewSaved" type="button" class="btn btn-default btn-sm">View saved</button>
                        <button id="viewGallery" type="button" class="btn btn-default btn-sm">Back</button>
                    <%}%>
                </div>
            </div>            
            <div id="thumbGallery" class="row">
                <%for( var i=0; i<characters.length; i++){%>
                    <div class="brik col-xs-4">
                        <div id="thumb<%=characters[i].id%>" class="thumbnail">
                            <div class="imgBox fadeImg">
                                <img src="./images/<%=characters[i].guild.image%>">
                            </div>                            
                        <p class="caption"><%=characters[i].name%> - <%=characters[i].guild.name%></p>
                        </div>                    
                    </div>                                    
                <%}%>
                
            </div>
        </div>
    </div>