<!-- partial view displaying modal for location-form -->
<div class="modal fade" id="createLocations" tabindex="-1" role="dialog" aria-labelledby="createLocations" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">
                    <span class="glyphicon glyphicon-plus"></span> create new location
                </h4>
            </div>
            <div class="modal-body">
                <div id="alertLocation" class="alert alert-danger"></div>
                <form id="createLocation" class="modal-form form-horizontal" role="form" action="/crud" method="post">
                    <div class="form-group">
                        <label><input type="checkbox" value="true" name="start"> Possible start location</label>                                
                    </div>
                    <div class="form-group">
                        <label>Name:</label>
                        <input type="text" class="form-control" name="name">
                    </div>
                    <div class="form-group">
                        <label>Text:</label>
                        <textarea type="text" class="form-control" name="text"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Trigger event</label>
                        <select class="form-control" name="locationTrigger">
                            <%for( var i=0; i<events.length; i++){%>
                                    <option value="<%=events[i].id%>"><%=events[i].name%></option>
                                <%}%>
                        </select>
                    </div>
                    <input type="hidden" name="form" value="createLocation">
                    <input id="locationId" type="hidden" name="id" value="">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button id="btnCreateLocation" type="button" class="btn btn-info" >Create location</button>
            </div>
        </div>
      </div>
    </div>